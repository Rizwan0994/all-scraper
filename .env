# Product Scraper Configuration
SCRAPER_NAME=ProductScraper
DEBUG=True

# Database Configuration
DATABASE_TYPE=sqlite  # Options: sqlite, mysql, postgresql, mongodb
DATABASE_URL=sqlite:///products.db

# Scraping Settings
MAX_PRODUCTS_PER_SITE=2500
CONCURRENT_REQUESTS=5
DOWNLOAD_DELAY=2
USER_AGENT_ROTATION=True

# Image Settings
DOWNLOAD_IMAGES=True
IMAGE_FOLDER=images
MAX_IMAGE_SIZE=2MB

# Proxy Settings (Optional)
USE_PROXIES=False
PROXY_LIST=proxies.txt

# Sites to Scrape
SCRAPE_AMAZON=True
SCRAPE_ALIEXPRESS=True
SCRAPE_EBAY=True
SCRAPE_ETSY=True

# Search Keywords (comma-separated)
SEARCH_KEYWORDS=electronics,clothing,home,books,toys

# API Keys (if using official APIs)
EBAY_API_KEY=
ETSY_API_KEY=
